<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jslee.product.mapper.ProductMapper">
    <select id="list" resultType="Product">
        select *
        from product
    </select>

    <select id="select" resultType="Product">
        select *
        from product
        where no = #{no}
    </select>

    <update id="update">
        update product
        set price = #{price}
            , name = #{name}
            , img = #{img}
            <!-- , updDate = now() -->
        where no = #{no}
    </update>

    <delete id="delete">
        delete from product
        where no = #{no} 
    </delete>

    <insert id="insert">
        insert into product(name, price, img)
        value (#{name}, #{price}, #{img})
    </insert>

</mapper>